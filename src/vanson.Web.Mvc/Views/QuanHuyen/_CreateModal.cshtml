@using Abp.Authorization.Users
@using Abp.MultiTenancy
@using vanson.MultiTenancy
@using vanson.Web.Models.Common.Modals
@{
    Layout = null;
}
<div class="modal fade" id="TenantCreateModal" tabindex="-1" role="dialog" aria-labelledby="TenantCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewTenant")))
            <form name="tenantCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Mã")</label>
                        <div class="col-md-9">
                            <input type="text" name="Mã" class="form-control" required minlength="2">
                        </div>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Tên")</label>
                        <div class="col-md-9">
                            <input type="text" name="Tên" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Tên Tắt")</label>
                        <div class="col-md-9">
                            <input type="email" name="Tên Tắt" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Tỉnh Thành Mã")</label>
                        <div class="col-md-9">
                            <input type="text" name="Tỉnh thành mã" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Quận Huyện Bắt Đầu")</label>
                        <div class="col-md-9">
                            <input type="text" name="Quận Huyện Bắt Đầu" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Quận Huyện Kết Thúc")</label>
                        <div class="col-md-9">
                            <input type="text" name="Quận Huyện Kết Thúc" class="form-control"/>
                        </div>
                        </div>
                        <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Quận Huyện Hiệu Lực")</label>
                        <div class="col-md-9">
                            <input type="text" name="Quận Huyện Hiệu Lực" class="form-control"/>
                        </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-9">
                            <p>@L("DefaultPasswordIs", vanson.Authorization.Users.User.DefaultPassword)</p>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
